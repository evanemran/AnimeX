<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/background"
    tools:context=".DetailsActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_details"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:id="@+id/textView_title"
            android:text="Details"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:gravity="center_vertical"
            android:fontFamily="@font/animex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/top_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView_banner"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop" />
                    <LinearLayout
                        android:id="@+id/main_container"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imageView_main"
                            android:layout_margin="8dp"
                            android:layout_width="0dp"
                            android:scaleType="centerCrop"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_margin="8dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">
                            <TextView
                                android:id="@+id/textView_seasons"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:fontFamily="@font/animex"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:padding="4dp"/>
                            <TextView
                                android:id="@+id/textView_year"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:fontFamily="@font/animex"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:padding="4dp"/>
                            <TextView
                                android:id="@+id/textView_episodes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:fontFamily="@font/animex"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:padding="4dp"/>
                            <TextView
                                android:id="@+id/textView_episodes_duration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:fontFamily="@font/animex"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:padding="4dp"/>
                            <TextView
                                android:id="@+id/textView_score"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:fontFamily="@font/animex"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:padding="4dp"/>
                            <TextView
                                android:id="@+id/textView_start_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:fontFamily="@font/animex"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:padding="4dp"/>
                            <TextView
                                android:id="@+id/textView_end_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:fontFamily="@font/animex"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:padding="4dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/date_container"
                    android:layout_below="@id/top_container"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/top_container"
                            android:fontFamily="@font/animex"
                            android:padding="4dp"
                            android:text="Start Date"
                            android:textAlignment="center"
                            android:textColor="@color/orange"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/textView_sd"
                            android:textAlignment="center"
                            android:layout_below="@+id/textView_genre_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Text"
                            android:fontFamily="@font/animex"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:padding="4dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/top_container"
                            android:fontFamily="@font/animex"
                            android:padding="4dp"
                            android:text="End Date"
                            android:textAlignment="center"
                            android:textColor="@color/orange"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/textView_ed"
                            android:textAlignment="center"
                            android:layout_below="@+id/textView_genre_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Text"
                            android:fontFamily="@font/animex"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:padding="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView_genre_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date_container"
                    android:fontFamily="@font/animex"
                    android:padding="4dp"
                    android:text="Genres"
                    android:textAlignment="center"
                    android:textColor="@color/orange"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView_genres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_genre_container"
                    android:fontFamily="@font/animex"
                    android:padding="4dp"
                    android:text="Text"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <LinearLayout
                    android:id="@+id/youtube_viewer"
                    android:layout_margin="8dp"
                    android:layout_below="@+id/textView_genres"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/youtube_viewer"
                        android:fontFamily="@font/animex"
                        android:padding="4dp"
                        android:text="Trailer"
                        android:textAlignment="center"
                        android:textColor="@color/orange"
                        android:textSize="16sp" />

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtube_player_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:autoPlay="false" />
                </LinearLayout>
                <TextView
                    android:id="@+id/textView_description_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/youtube_viewer"
                    android:fontFamily="@font/animex"
                    android:padding="4dp"
                    android:text="Description"
                    android:textAlignment="center"
                    android:textColor="@color/orange"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView_details"
                    android:textAlignment="center"
                    android:layout_below="@+id/textView_description_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Text"
                    android:fontFamily="@font/animex"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:padding="4dp"/>

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/animex"
                android:padding="4dp"
                android:text="Episodes"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="16sp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_episodes"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>